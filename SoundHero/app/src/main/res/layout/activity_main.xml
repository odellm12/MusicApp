<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connectButt"
            android:onClick="connect"
            android:text="Connect to Beat Indicator"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playButt"
                android:layout_weight="1"
                android:onClick="playButton"
                android:text="Play"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pauseButt"
                android:onClick="pauseButton"
                android:text="Pause"
                android:layout_weight="1"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contButt"
                android:onClick="continueButton"
                android:text="Continue"
                android:layout_weight="1"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopButt"
                android:onClick="stopButton"
                android:text="Stop"
                android:layout_weight="1"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bluetoothText"/>


</LinearLayout>